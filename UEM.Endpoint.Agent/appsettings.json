{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "UEM.Endpoint.Agent": "Information"
    }
  },
  "Heartbeat": {
    "IntervalSeconds": 30,
    "RetentionDays": 90
  },
  "Discovery": {
    "EnablePeriodic": true,
    "IntervalHours": 24,
    "EnableHardwareDiscovery": true,
    "EnableSoftwareDiscovery": true,
    "EnableSecurityDiscovery": true,
    "RetryAttempts": 3,
    "RetryDelayMinutes": 5
  },
  "Api": {
    "CommandResponseUrl": "https://localhost:7201",
    "SatelliteBaseUrl": "https://localhost:7200",
    "RequestTimeoutMinutes": 5,
    "MaxPayloadSizeMB": 50
  },
  "Satellite": {
    "BaseUrl": "https://localhost:7200"
  },
  "Security": {
    "ValidateCertificates": false,
    "EnableTpmDiscovery": true,
    "EnableBitLockerDiscovery": true,
    "EnableRegistryDiscovery": true,
    "EnableProcessDiscovery": true
  },
  "Performance": {
    "MaxConcurrentDiscoveries": 3,
    "DiscoveryTimeoutMinutes": 30,
    "EnableDetailedLogging": true
  },
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Username=postgres;Password=postgres;Database=uem_db"
  },
  "Jwt": { 
    "SigningKey": "3f9a2b6c9d1e4f7081b2c3d4e5f60718293a4b5c6d7e8f90123456789abcdeff" 
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topics": {
      "Commands": "uem.commands",
      "Responses": "uem.commands.responses"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning", 
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Extensions.Hosting": "Information",
        "UEM.Endpoint.Agent": "Information"
      }
    },
    "WriteTo": [
      { 
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/agent/uem-agent-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 52428800,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "buffered": false,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [{SourceContext}] [{ThreadId}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/services/heartbeat-.log",
          "rollingInterval": "Day", 
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] {Message:lj}{NewLine}{Exception}",
          "filter": [
            {
              "Name": "ByIncludingOnly",
              "Args": {
                "expression": "SourceContext = 'UEM.Endpoint.Agent.Services.HeartbeatService'"
              }
            }
          ]
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/services/discovery-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "fileSizeLimitBytes": 52428800,
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "filter": [
            {
              "Name": "ByIncludingOnly", 
              "Args": {
                "expression": "SourceContext like 'UEM.Endpoint.Agent.Services.*Discovery*'"
              }
            }
          ]
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/services/commands-.log", 
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "fileSizeLimitBytes": 20971520,
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "filter": [
            {
              "Name": "ByIncludingOnly",
              "Args": {
                "expression": "SourceContext like '*Command*' or SourceContext like '*AgentWorker*'"
              }
            }
          ]
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/errors/error-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 60,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Warning",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [{SourceContext}] [{ThreadId}] [{MachineName}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName" ]
  }
}