{
  "ServerSettings": {
    "Port": 8099,
    "Environment": "Development"
  },
  "ApiEndpoints": {
    "Satellite": "http://localhost:8000",
    "WebApp": "http://localhost:5000"
  },
  "CorrelationId": {
    "Header": "X-Correlation-Id"
  },

  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topics": {
      "Commands": "uem.commands",
      "Responses": "uem.commands.responses"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Confluent.Kafka": "Debug"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/uem-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
