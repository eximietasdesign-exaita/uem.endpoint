modules = ["dotnet-7.0", "nodejs-20", "web", "dotnet-8.0", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Satellite API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ServiceBroker API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "EndpointMaster"

[[workflows.workflow]]
name = "Satellite API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd UEM.Satellite.API && dotnet run --no-launch-profile --urls \"http://0.0.0.0:8000\""
waitForPort = 8000

[[workflows.workflow]]
name = "ServiceBroker API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd UEM.ServiceBroker.API && dotnet run --no-launch-profile --urls \"http://0.0.0.0:8099\""
waitForPort = 8099

[[workflows.workflow]]
name = "EndpointMaster"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8099
externalPort = 8099

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd UEM.Web.UI && npm run preview -- --host=0.0.0.0 --port=5000"]
build = ["bash", "-c", "cd UEM.Web.UI && npm run build"]
